//palindrome 

#include<iostream>
using namespace std;


int main()
{
    char A[] ="MADAMJi";
    int i;
    for(i =0; A[i] !='\0';i++)
    {
        
    }
    i = i-1;
    char B[i+1];
    int j;
    for(i,j=0; i>=0;i--,j++)
    {
        B[j] = A[i];
    }
    B[j] = '\0';
    cout<<B<<endl;
    
    for(i=0,j=0;A[i] != '\0' ;i++,j++)
    {
        if(A[i] != B[j])
        break;
    }
    
    if(A[i] == B[j])
    cout<<"palindrome"<<endl;
    else 
    cout<<"not palindrome";
    return 0;
}
